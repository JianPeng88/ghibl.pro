<svg viewBox="0 0 1200 600" xmlns="http://www.w3.org/2000/svg">
  <!-- 天空渐变背景 -->
  <defs>
    <linearGradient id="skyGradient" x1="0%" y1="0%" x2="0%" y2="70%">
      <stop offset="0%" stop-color="#6ab7ff" />
      <stop offset="100%" stop-color="#c6e4ff" />
    </linearGradient>
    
    <!-- 柔和阴影 -->
    <filter id="softShadow" x="-10%" y="-10%" width="120%" height="120%">
      <feGaussianBlur in="SourceAlpha" stdDeviation="3" />
      <feOffset dx="2" dy="2" result="offsetblur" />
      <feComponentTransfer>
        <feFuncA type="linear" slope="0.5" />
      </feComponentTransfer>
      <feMerge>
        <feMergeNode />
        <feMergeNode in="SourceGraphic" />
      </feMerge>
    </filter>
  </defs>
  
  <!-- 天空背景 -->
  <rect width="1200" height="600" fill="url(#skyGradient)" />
  
  <!-- 云朵 -->
  <g>
    <ellipse cx="200" cy="120" rx="100" ry="40" fill="white" opacity="0.9" />
    <ellipse cx="230" cy="110" rx="70" ry="50" fill="white" opacity="0.95" />
    <ellipse cx="170" cy="130" rx="60" ry="35" fill="white" opacity="0.9" />
    
    <ellipse cx="500" cy="90" rx="120" ry="50" fill="white" opacity="0.9" />
    <ellipse cx="530" cy="80" rx="90" ry="40" fill="white" opacity="0.95" />
    <ellipse cx="470" cy="95" rx="70" ry="45" fill="white" opacity="0.9" />
    
    <ellipse cx="800" cy="140" rx="130" ry="45" fill="white" opacity="0.9" />
    <ellipse cx="830" cy="130" rx="80" ry="55" fill="white" opacity="0.95" />
    <ellipse cx="770" cy="150" rx="90" ry="40" fill="white" opacity="0.9" />
    
    <ellipse cx="1050" cy="100" rx="100" ry="40" fill="white" opacity="0.9" />
    <ellipse cx="1080" cy="90" rx="70" ry="30" fill="white" opacity="0.95" />
    <ellipse cx="1020" cy="110" rx="60" ry="35" fill="white" opacity="0.9" />
  </g>
  
  <!-- 远景树木和山丘 -->
  <path d="M0,350 Q300,300 600,330 Q900,290 1200,320 L1200,600 L0,600 Z" fill="#a3d685" opacity="0.8" />
  <path d="M0,400 Q200,370 400,390 Q600,360 800,380 Q1000,350 1200,370 L1200,600 L0,600 Z" fill="#8bc865" opacity="0.85" />
  
  <!-- 中景树木 -->
  <path d="M-50,600 Q0,520 50,540 Q100,490 150,530 Q200,480 250,520 Q300,500 350,550 L400,600 Z" fill="#6fa044" />
  <path d="M800,600 Q850,520 900,540 Q950,490 1000,530 Q1050,480 1100,520 Q1150,500 1200,550 L1250,600 Z" fill="#6fa044" />
  
  <!-- 木板路 -->
  <path d="M450,600 C480,550 510,510 540,470 C570,430 600,400 630,370 C660,400 690,430 720,470 C750,510 780,550 810,600 Z" fill="#d9bc8b" />
  
  <!-- 木板纹理 -->
  <g stroke="#b89c6e" stroke-width="1" opacity="0.7">
    <line x1="470" y1="590" x2="790" y2="590" />
    <line x1="480" y1="570" x2="780" y2="570" />
    <line x1="490" y1="550" x2="770" y2="550" />
    <line x1="500" y1="530" x2="760" y2="530" />
    <line x1="510" y1="510" x2="750" y2="510" />
    <line x1="520" y1="490" x2="740" y2="490" />
    <line x1="530" y1="470" x2="730" y2="470" />
    <line x1="540" y1="450" x2="720" y2="450" />
    <line x1="550" y1="430" x2="710" y2="430" />
    <line x1="560" y1="410" x2="700" y2="410" />
    <line x1="570" y1="390" x2="690" y2="390" />
  </g>
  
  <!-- 低矮的植物 -->
  <g fill="#598c39">
    <path d="M400,600 C410,590 415,580 420,570 C425,580 430,590 435,600 Z" />
    <path d="M420,600 C430,590 435,575 440,565 C445,575 450,590 455,600 Z" />
    <path d="M440,600 C450,590 455,570 460,560 C465,570 470,590 475,600 Z" />
    
    <path d="M780,600 C790,590 795,580 800,570 C805,580 810,590 815,600 Z" />
    <path d="M800,600 C810,590 815,575 820,565 C825,575 830,590 835,600 Z" />
    <path d="M820,600 C830,590 835,570 840,560 C845,570 850,590 855,600 Z" />
  </g>
  
  <!-- 吉卜力风格的男孩人物 (参考第二张图) -->
  <g transform="translate(550, 300) scale(0.8)" filter="url(#softShadow)">
    <!-- 身体 -->
    <rect x="0" y="50" width="80" height="100" rx="10" fill="#546e87" />
    
    <!-- 头部 -->
    <circle cx="40" cy="30" r="30" fill="#ffdab9" />
    
    <!-- 头发 -->
    <path d="M15,25 Q25,0 40,10 Q55,0 65,25 Q70,10 75,20 Q65,40 65,30 L65,30 Q60,15 40,15 Q20,15 15,30 Z" fill="#553626" />
    
    <!-- 帽子 -->
    <path d="M10,20 Q25,-5 70,20 L75,25 Q60,10 40,10 Q20,10 5,25 Z" fill="#a7c399" />
    <ellipse cx="40" cy="18" rx="30" ry="10" fill="#a7c399" />
    <circle cx="40" cy="15" r="5" fill="#d0dcc3" />
    
    <!-- 眼睛 -->
    <ellipse cx="30" cy="30" rx="5" ry="6" fill="white" />
    <ellipse cx="50" cy="30" rx="5" ry="6" fill="white" />
    <circle cx="30" cy="30" r="3" fill="#704214" />
    <circle cx="50" cy="30" r="3" fill="#704214" />
    <circle cx="31" cy="29" r="1" fill="white" />
    <circle cx="51" cy="29" r="1" fill="white" />
    
    <!-- 嘴巴 -->
    <path d="M35,45 Q40,50 45,45" fill="none" stroke="#333" stroke-width="1" />
    
    <!-- 鼻子 -->
    <path d="M38,35 Q40,40 42,35" fill="#f0c0a0" />
  </g>
  
  <!-- 吉卜力风格的女孩和狗 (参考第三张图) -->
  <g transform="translate(700, 350) scale(0.7)" filter="url(#softShadow)">
    <!-- 女孩身体 -->
    <rect x="0" y="30" width="60" height="80" rx="10" fill="#cc3333" />
    <rect x="10" y="110" width="40" height="50" rx="5" fill="#334455" />
    
    <!-- 女孩头部 -->
    <circle cx="30" cy="20" r="20" fill="#ffdab9" />
    
    <!-- 头发 -->
    <path d="M10,25 Q20,-5 30,0 Q40,-5 50,25 Q30,35 10,25 Z" fill="#222222" />
    
    <!-- 眼睛 -->
    <ellipse cx="23" cy="15" rx="4" ry="5" fill="white" />
    <ellipse cx="37" cy="15" rx="4" ry="5" fill="white" />
    <circle cx="23" cy="15" r="2" fill="#000000" />
    <circle cx="37" cy="15" r="2" fill="#000000" />
    
    <!-- 嘴巴 (笑容) -->
    <path d="M20,25 Q30,35 40,25" fill="none" stroke="#333" stroke-width="1" />
    
    <!-- 哈士奇狗 -->
    <ellipse cx="90" cy="80" rx="30" ry="20" fill="#dddddd" />
    <ellipse cx="90" cy="65" rx="20" ry="15" fill="#dddddd" />
    <path d="M70,80 Q65,100 80,110 Q95,100 110,80 Z" fill="#dddddd" />
    
    <!-- 狗耳朵 -->
    <path d="M75,55 L65,40 L80,50 Z" fill="#aaaaaa" />
    <path d="M105,55 L115,40 L100,50 Z" fill="#aaaaaa" />
    
    <!-- 狗眼睛 -->
    <circle cx="83" cy="65" r="3" fill="#333333" />
    <circle cx="97" cy="65" r="3" fill="#333333" />
    
    <!-- 狗鼻子 -->
    <ellipse cx="90" cy="70" rx="5" ry="3" fill="#333333" />
    
    <!-- 狗舌头 -->
    <path d="M90,75 Q90,85 95,80" fill="#ffaaaa" />
    
    <!-- 牵引绳 -->
    <path d="M60,80 Q70,90 80,95" fill="none" stroke="#996633" stroke-width="2" />
  </g>
</svg>